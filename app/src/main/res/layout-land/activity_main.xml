<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <org.opencv.android.JavaCameraView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>

        <com.zk.android.emotioncamera.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ai"
            android:layout_toLeftOf="@+id/camera_view"
            android:layout_marginRight="-45dp"
            android:layout_centerVertical="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/camera_view"
            android:layout_marginLeft="-85dp"
            android:layout_centerVertical="true">
            <com.zk.android.emotioncamera.CircleImageView
                android:id="@+id/albumView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@color/colorBlack"
                android:src="@drawable/gray"
                android:layout_below="@+id/take_btn"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true"/>

            <com.zk.android.emotioncamera.CircleButton
                android:id="@+id/take_btn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true" />

            <com.zk.android.emotioncamera.CircleImageView
                android:id="@+id/switch_camera"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="70dp"
                android:layout_above="@+id/take_btn"
                android:background="@color/colorBlack"
                android:src="@drawable/camera_switch" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>